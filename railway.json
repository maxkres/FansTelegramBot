{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && python -m pip install --upgrade pip"
  },
  "deploy": {
    "startCommand": "uvicorn server.app.main:app --host 0.0.0.0 --port ${PORT:-8080}",
    "ports": {
      "web": {
        "port": 8080,
        "protocol": "https"
      }
    }
  }
}