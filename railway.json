{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn server.app.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "ports": {
      "web": {
        "port": 8000,
        "protocol": "https"
      }
    }
  }
}